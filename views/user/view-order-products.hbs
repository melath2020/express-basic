<section>
    <div class="container">
        <table class="table mt-5">
            <thead>
                <tr>
                    <th scope="col">Image</th>
                    <th scope="col">Quantity</th>
                    <th scope="col">Price</th>
                </tr>
            </thead>
            <tbody>
                
                <tr>
                    {{#each products}}
                   <td><img style="width: 50px; height:70px" src="/product-images/{{this.product._id}}.jpg"></td>
                   <td>{{this.quantity}}</td>
                   <td>{{this.product.price}}</td>
                
                            
                </tr>
                {{/each}}
                
            </tbody>
        </table>
        <hr>
       
    </div>
</section>
