
<section>
    <div class="container">
 
         <a href="/admin/add-product" class="btn btn-success mt-4 float-end">Add Product</a>
  
        <table class="table mt-5 display" id="myTable">
  <thead>
    <tr>
      <th scope="col">No</th>
      <th scope="col">Title</th>
      <th scope="col">Price</th>
      <th scope="col">Category</th>
      <th scope="col">Description</th>
      <th scope="col">Image</th>
       <th scope="col">Actions</th>
    </tr>
  </thead>
  <tbody>
      {{#each products}}
    <tr>
      <th scope="row">1</th>
      <td>{{this.name}}</td>
      <td>{{this.price}}</td>
      <td>{{this.category}}</td>
      <td>{{this.description}}</td>
      <td><img src="/product-images/{{this._id}}.jpg" style="width: 50px;height:50px"></td>
      <td>
      <a href="/admin/edit-product/{{this._id}}" class="btn btn-primary">Edit</a>
      <a href="/admin/delete-product/{{this._id}}" class="btn btn-danger" onclick="return confirm('are you sure to delete  {{this.name}}?')">Delete</a>
      </td>

    </tr>{{/each}}
  
  </tbody>
</table>
<script>
  $(document).ready( function () {
    $('#myTable').DataTable();
} );
</script>
    </div>
</section>